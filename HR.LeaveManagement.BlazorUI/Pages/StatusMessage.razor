
@if (string.IsNullOrEmpty(Message) == false)
{
    @if (Error)
    {
        <div class="alert alert-danger">
            @Message
        </div>
    }
    else
    {
        <div class="alert alert-success">
            @Message
        </div>
    }
}

@code {
    [Parameter]
    public bool Error { get; set; } = false;

    [Parameter]
    public string Message { get; set; } = string.Empty;
}
